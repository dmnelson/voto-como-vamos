- content_for(:title) { @candidate.name }
- content_for(:esquerda_css) { 'interface2' }
- content_for(:direita_css) { 'interface2' }

= content_for :left do
  = render :partial => 'candidate'

= content_for :right do
  #conteudo.interface2
    h3.proposta
      - if current_user.represents? @candidate
        = link_to "Adicionar Proposta", new_candidate_proposal_path(@candidate), :id => "add_proposal", :class => "btn primary"
        br
        br  
      = "Propostas (#{@candidate.proposals.size})"
    - @candidate.proposals.each do |proposal|
      = render :partial => 'proposal', :locals => { :proposal => proposal }
    end
